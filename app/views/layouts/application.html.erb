<!DOCTYPE html>
<html>
<head>
  <title>SuperPost</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
</head>
<body>

  <style type="text/css">
    body {
      background-color: #FFFFFF;
    }
    .ui.menu .item img.logo {
      margin-right: 1.5em;
    }
    .main.container {
      margin-top: 7em;
    }
  </style>

  <div class="ui fixed inverted menu">
    <div class="ui container">
      <%= link_to root_path, class: "header item" do %>
        <%= image_tag 'logo.png' %>
        Super Post
      <% end %>
      <%= link_to "Post", new_post_path, class: "item" %>
      <div class="ui simple dropdown item">
        More <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to "My Posts", root_path, class: "item" %>
          <%= link_to "Saved Posts", root_path, class: "item" %>
          <div class="divider"></div>
          <div class="header">Help</div>
          <!-- <div class="item">
            <i class="dropdown icon"></i>
            Sub Menu
            <div class="menu">
              <a class="item" href="#">Link Item</a>
              <a class="item" href="#">Link Item</a>
            </div>
          </div> -->
          <a class="item" href="#">Q & A</a>
          <a class="item" href="#">Contact Us</a>
        </div>
      </div>
    </div>
  </div>
  <div class="ui main container">
    <%= yield %>
  </div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield :custom_js %>
</body>
</html>
